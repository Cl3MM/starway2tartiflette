<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <PreferenceCategory android:title="@string/pref_user_civilite" >
        <EditTextPreference
                android:title="@string/pref_user_last_name"
                android:summary="@string/pref_user_last_name_summary"
                android:key="prefUserLastName"/>
        <EditTextPreference
                android:title="@string/pref_user_first_name"
                android:summary="@string/pref_user_first_name_summary"
                android:key="prefUserFirstName"/>
        <EditTextPreference
                android:title="@string/pref_user_age"
                android:summary="@string/pref_user_set_age"
                android:numeric="integer"
                android:key="prefUserAge"/>
    </PreferenceCategory>
     
    
    <PreferenceCategory android:title="@string/pref_user_contact" >
        <EditTextPreference
                android:title="@string/pref_user_telephone"
                android:summary="@string/pref_user_set_telephone"
				android:numeric="integer"
                android:key="prefUserLastName"/>
        <EditTextPreference
                android:title="@string/pref_user_email"
                android:summary="@string/pref_user_set_email"
                android:key="prefUserFirstName"/>
        <EditTextPreference
                android:title="@string/pref_user_adresse"
                android:summary="@string/pref_user_set_adresse"
                android:key="prefUserAge"/>
    </PreferenceCategory>

