<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlPopUpListItem"
    android:layout_width="fill_parent"
	android:padding="5dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tvDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:text="@string/horraireDepart"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/table_content" />

        <TextView
            android:id="@+id/horraireAllerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvDepart"
            android:ellipsize="none"
            android:gravity="right"
            android:singleLine="true"
            android:text="12:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/orange_dark" />

        <TextView
            android:id="@+id/tvSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/horraireAllerTv"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=" - "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/table_content" />

        <TextView
            android:id="@+id/tvHorraireArrivee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvSpacer"
            android:paddingRight="10dp"
            android:text="@string/horraireArrivee"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/table_content" />

        <TextView
            android:id="@+id/horraireArriveeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvHorraireArrivee"
            android:ellipsize="none"
            android:gravity="right"
            android:singleLine="true"
            android:text="12:45"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/orange_dark" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_action_list_arrow" />

</RelativeLayout>