<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark_radial" >

    <TextView 
        android:id="@+id/tvBilletsHeader"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:background="@color/greenFont"
        android:padding="10dp"
        android:textColor="@color/table_background"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="@string/pasdeBillet" />

    <ListView
        android:layout_below="@+id/tvBilletsHeader"
        android:id="@+id/lvBillets"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:drawSelectorOnTop="false"
        android:cacheColorHint="@color/table_background"
        android:listSelector="@drawable/passager_list_selector" >

    </ListView>
    <TextView 
        android:id="@+id/tvEmptyList"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="@string/pasdeBillet" />

</RelativeLayout>
