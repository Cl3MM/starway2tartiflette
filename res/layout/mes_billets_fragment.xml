<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_dark_radial" >

    <LinearLayout
        android:id="@+id/ll001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/headerBackground"
        android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingTop="10dp"
                    android:text="Mes"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/greenFont" />

                <TextView
                    android:id="@+id/tvBillets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Billets"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

            </LinearLayout>

    <ListView
        android:id="@+id/lvBillets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll001"
        
        android:cacheColorHint="@color/table_background"
        android:dividerHeight="1sp"
        android:divider="@color/hintColor"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent" >

    </ListView>

    <TextView 
        android:id="@+id/tvEmptyList"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:text="@string/pasdeBillet" />

</RelativeLayout>
