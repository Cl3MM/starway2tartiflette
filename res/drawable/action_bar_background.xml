<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom Line -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/action_bar_light" />
        </shape>
    </item>

    <!-- Color of your action bar -->
    <item android:bottom="2dip">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="@color/action_bar_dark"
                android:startColor="@color/action_bar_light" />
        </shape>
    </item>

</layer-list>